<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:onClick="hairClick">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/hairtwo"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Hair"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            style="@style/MyTheme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:onClick="makeUpClick">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/makeup"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="Make Up"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="18sp"
            style="@style/MyTheme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:onClick="BeautyClick">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/beauty"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Beauty"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            style="@style/MyTheme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:onClick="NailsClick"
        android:background="#FFFFFF"
        android:elevation="6dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/nails_package"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:text="Nails"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            style="@style/MyTheme"/>
    </LinearLayout>



</LinearLayout>