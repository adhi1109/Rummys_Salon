<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:id="@+id/rummyView"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/summer_package"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:text="Summer Package"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:text="Rs 1999 only"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/nails_package"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:text="Special Nail Redo"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:text="Rs 999 only"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/cuccio_package"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:text="Cuccio Special Cleanup"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:text="Rs 2499 only"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:text="Rummy Chaddha"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="4dp"
                android:text="Chief Stylist"
                android:textSize="14sp" />
        </LinearLayout>



    </LinearLayout>

</HorizontalScrollView>